<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="danielfilho.ufc.br.com.predetect">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--<meta-data android:name="force_old_scanning_api" android:value="true" />-->

        <receiver android:name=".receivers.NetworkReceiver" android:enabled="true">
            <intent-filter android:priority="1000">
                <action android:name="android.net.wifi.RSSI_CHANGED" />
            </intent-filter>
            <intent-filter>
                <action android:name="danielfilho.ufc.br.com.predetect.OBSERVING_ENDS"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.bluetooth.device.action.FOUND" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.bluetooth.adapter.action.STATE_CHANGED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.bluetooth.adapter.action.DISCOVERY_FINISHED" />
            </intent-filter>
        </receiver>

        <service android:name=".services.NetworkObserverService">
            <intent-filter android:priority="1000">
                <action android:name=".constants.ACTION_SERVICE"/>
            </intent-filter>
        </service>

    </application>



</manifest>
